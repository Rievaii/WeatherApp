@model ForecastModel


<section class="vh-60">
    <div class="container py-5 h-60">
        <div class="row d-flex justify-content-center align-items-top h-60">
            <div @* class="col-md-10 col-lg-8 col-xl-6" *@>

                <div class="card bg-dark text-white" style="border-radius: 40px;">
                    @* <div class="bg-image" style="border-radius: 35px;">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-weather/draw1.webp"
                    class="card-img" alt="weather" />
                    <div class="mask" style="background-color: rgba(190, 216, 232, .5);"></div>
                    </div> *@
                    <div class="card-img-overlay text-dark p-5">
                        <h4 class="mb-0">@Model.Name, @ViewBag.State, @ViewBag.Country</h4>
                        <p class="display-2 my-3">@Model.main?.Temp °C</p>
                        <p class="mb-2">Ощущается как: <strong>@Model.main?.Feels_like °C</strong></p>
                        @*TODO:check what exactly weather element*@
                        <h5>@Model.weather[0]?.Description</h5>
                        <ul class="list-group list-group-horizontal-lg justify-content-center" id="locationslist">
                            <li class="list-group-item">
                                <img src="https://i.imgur.com/B9kqOzp.png" height="17px">

                                <span> @Model.wind?.Speed km/h  </span>
                            </li>
                            <li class="list-group-item">
                                <img src="~/Resources/free-icon-humidity-1585362 (1).png" height="17px">
                                <span> @Model.main?.Humidity% </span>
                            </li>
                            <li class="list-group-item">
                                <img src="https://i.imgur.com/wGSJ8C5.png" height="17px">
                                <span> @Model.main?.Pressure h </span>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
